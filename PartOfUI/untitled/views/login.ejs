                        <li>
                            <input name="InfoPwd" type="text" class="InfoPwd" value="PASSWORD" readonly="readonly">
                        </li>
                        <li>
                            <input name="password" type="password" class="loginPwd" value="" placeholder="What's your password:" maxlength="100" id="password">
                        </li>
                        <li>
                            <input name="continueBtn" type="submit" class="loginBtn" id="continueBtn" value="CONTINUE">
<!--                            <input name="continueBtn" type="submit" class="loginBtn" id="continueBtn" value="CONTINUE" onclick="myfunc()">-->
                        </li>
                    </ul>
                    <div id="show" class="show"></div>
                </form>
            </div>
        </div>
        <div class="loginBottom"></div>
    </div>

